{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "type-check"]
    },
    "@pg/app#build": {
      "outputs": ["dist/**"]
    },
    "@pg/docs#build": {
      "outputs": ["src/.vitepress/dist/**"]
    },
    "@pg/ui#build": {
      "outputs": ["dist/**"]
    },
    "@pg/app#tauri:build": {
      "dependsOn": ["build"],
      "outputs": ["app/src-tauri/target/release/**"]
    },
    "@pg/app#tauri:build:android": {
      "dependsOn": ["build"],
      "outputs": ["app/src-tauri/target/*-android/release/**"]
    },
    "dev": {
      "with": ["@pg/app#tauri:dev"],
      "cache": false,
      "persistent": true
    },
    "@pg/app#tauri:dev": {
      "outputs": ["app/src-tauri/target/debug/**"],
      "persistent": true
    },
    "type-check": {
      "inputs": ["app/src/**/*.tsx"]
    },
    "@pg/ui#build-storybook": {
      "outputs": ["packages/ui/storybook-static/**"]
    }
  }
}
